  langid = {english},
  file = {/Users/lunokhod/Zotero/storage/TXMLAULC/Broquet et al. - 2021 - The Composition of the South Polar Cap of Mars Der.pdf}
}

@article{Broquet.Wieczorek2019,
  title = {The {{Gravitational Signature}} of {{Martian Volcanoes}}},
  author = {Broquet, A. and Wieczorek, M. A.},
