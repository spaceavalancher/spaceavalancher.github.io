  langid = {english},
  keywords = {Gravity and topography admittance,Mercury's crust,MESSENGER,Surface porosity},
  file = {/Users/lunokhod/Zotero/storage/JD6W2RFA/Genova et al. - 2023 - Regional variations of Mercury's crustal density a.pdf}
