@article{Baratoux.etal2014,
  title = {Petrological Constraints on the Density of the {{Martian}} Crust},
  author = {Baratoux, David and Samuel, Henri and Michaut, Chlo{\'e} and Toplis, Michael J. and Monnereau, Marc and Wieczorek, Mark and Garcia, Rapha{\"e}l and Kurita, Kei},
